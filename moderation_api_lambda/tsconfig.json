{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["jest", "node"],
    "noImplicitAny": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
